<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg_main"
  android:orientation="vertical">
  <LinearLayout 
   	  android:id="@+id/topbar"
   	  android:layout_width="fill_parent"
  	  android:layout_height="40dip"
  	  android:gravity="center_vertical"
  	  android:background="@drawable/bg_topbar">
  	  <Button 
  	  	  style="@style/Button"
  	  	  android:id="@+id/btn_ariticleback"
	  	  android:layout_width="wrap_content"
	  	  android:layout_height="45dip"
	  	  android:text="@string/back"
	  	  android:layout_weight="1"/>
	  <TextView 
	  	  android:layout_width="wrap_content"
	  	  android:layout_height="wrap_content"
	  	  android:textColor="#000000"
	  	  android:gravity="center"
	  	  android:text="今日十大"
	  	  android:textSize="20dip"
	  	  android:layout_gravity="center"
	  	  android:layout_weight="4"
	  	  android:id="@+id/tv_Info"/>
	  <ImageButton 
	  	  style="@style/Button"
	  	  android:id="@+id/btn_articleMore"
	  	  android:src="@android:drawable/ic_menu_more"
	  	  android:text="@string/refresh"
	  	  android:layout_width="wrap_content"
	  	  android:layout_height="45dip"
	  	  android:layout_weight="1"/>
  	  </LinearLayout>
  	  <RelativeLayout 
  	  	android:id="@+id/infobanner"
  	 	android:layout_width="fill_parent"
  	 	android:layout_height="wrap_content"
  	 	android:background="@drawable/bg_topbar">
  	 	<TextView 
			android:id="@+id/tv_posttitle"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:layout_width="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="20dip"
			android:gravity="center"
			android:textColor="#50000000"
			android:text="文章标题"
			android:layout_height="wrap_content"/>
		<TextView 
			android:id="@+id/tv_postno"
			android:layout_toRightOf="@id/tv_posttitle"
			android:layout_alignParentRight="true"
			android:layout_marginRight="5dip"
			android:layout_width="fill_parent"
			android:gravity="right"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:textColor="#d0000000"
			android:text="当前位置：沙发"
			android:layout_height="wrap_content"/>  
		<ProgressBar
			android:id="@+id/progressbar_article"
			android:layout_centerInParent="true"
			android:indeterminateOnly="true"
			android:layout_width="80dip"
			android:layout_height="10dip"
			/>
  	 </RelativeLayout>		
	<ListView
		android:id="@+id/listview_article"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:dividerHeight="0dp"
		android:divider="@null"
		android:cacheColorHint="#00000000"
		android:alwaysDrawnWithCache="true"
		android:drawingCacheQuality="high">
	</ListView>
	
</LinearLayout>

