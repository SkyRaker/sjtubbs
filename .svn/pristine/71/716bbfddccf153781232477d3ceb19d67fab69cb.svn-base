<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:id="@+id/item"
	android:layout_height="wrap_content">
	<TextView 
			android:id="@+id/tv_Colums"
			android:background="@drawable/bg_topbar" 
			android:layout_width="fill_parent"
			android:gravity="center"
			android:textColor="@color/divider"
			android:text="分区十大"
			android:layout_height="wrap_content"/>    
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/list_select"
		android:layout_below="@id/tv_Colums"
		android:orientation="vertical"
		android:minHeight="55dip">
		<TextView
			android:id="@+id/txtview_topten_title"
			android:layout_alignParentTop="true"
			android:adjustViewBounds="true"
			android:padding="2dip"
			android:text="文章的标题"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip"
			android:textSize="16sp"
			android:textColor="@color/topictitle" />
		<RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_marginTop="5dip"
			android:gravity="bottom"
			android:layout_height="wrap_content"
			android:layout_marginBottom="0dip"
			android:layout_below="@id/txtview_topten_title">
		<TextView
			android:layout_width="wrap_content"
			android:gravity="center_vertical"
			android:text="作者的ID"
			android:id="@+id/txtview_topten_authorid"
			android:layout_marginLeft="5dip"
			android:layout_alignParentLeft="true"
			android:layout_height="wrap_content"
			android:textSize="10sp"
			android:textColor="@color/id"></TextView>
		<TextView
			android:id="@+id/txtview_topten_board"
			android:text="所在的版区"
			android:layout_marginRight="5dip"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:textSize="10sp"
			android:textColor="@color/board"></TextView>
		<TextView
			android:id="@+id/txtview_topten_time"
			android:text="发布的时间"
			android:layout_toLeftOf="@id/txtview_topten_board"
			android:layout_marginRight="30dip"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textSize="10sp"
			android:textColor="@color/time"></TextView>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>