<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:gravity="center_vertical"
	android:layout_width="fill_parent" android:background="#10000000"
	android:orientation="vertical">
	<TextView android:id="@+id/tv_title" android:layout_height="wrap_content"
		android:padding="2dip" android:layout_width="fill_parent"
		android:layout_centerVertical="true" android:singleLine="true"
		android:textColor="@color/text" android:text="Name!" android:textSize="20dip" />
	<LinearLayout android:layout_height="wrap_content"
		android:padding="2dip" android:layout_width="fill_parent">
		<TextView android:id="@+id/tv_author" 
			android:layout_height="wrap_content"
			android:padding="2dip" 
			android:layout_weight="2"
			android:layout_width="fill_parent"
			android:layout_centerVertical="true" 
			android:gravity="center"
			android:singleLine="true"
			android:textColor="@color/white"
			 android:text="作者"
			android:textSize="12dip" />
		<TextView android:id="@+id/tv_time" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="2dip" 
			android:gravity="center"
			android:layout_width="fill_parent"
			android:layout_centerVertical="true" 
			android:singleLine="true"
			android:textColor="@color/white" 
			android:text="时间"
			android:textSize="12dip" />
		<TextView 
			android:padding="2dip" 
			android:singleLine="true" 
			android:text="版区" 
			android:gravity="center"
			android:textColor="@color/white" 
			android:layout_weight="2" 
			android:layout_height="wrap_content" 
			android:textSize="12dip" 
			android:layout_width="fill_parent" 
			android:id="@+id/tv_board"/>
	</LinearLayout>
</LinearLayout>
