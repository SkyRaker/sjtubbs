<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid android:color="#804c466c" />
			<gradient 
			    android:dither="true" 
				android:startColor="#50000000"
				android:endColor="#ffffffff"
				android:angle="90" />
			<corners 
				android:topLeftRadius="1dip"
				android:bottomLeftRadius="1dip"
				android:topRightRadius="1dip"
				android:bottomRightRadius="1dip" />
			<stroke android:width="1.0dip" android:color="#4c466c" />
			<padding android:left="2dip" android:right="2dip"
				android:top="2dip" android:bottom="2dip" />
		</shape>
	</item>

	<item android:state_focused="true">
		<shape>
			<solid android:color="#400069b0" />
			<corners 
				android:topLeftRadius="1dip"
				android:bottomLeftRadius="1dip"
				android:topRightRadius="1dip"
				android:bottomRightRadius="1dip" />
			<stroke android:width="1.0dip" android:color="#4c466c" />
			<padding android:left="2dip" android:right="2dip"
				android:top="2dip" android:bottom="2dip" />
		</shape>
	</item>
	<item>
		<shape>
			<solid android:color="#00000000" />
			<corners 
				android:topLeftRadius="1dip"
				android:bottomLeftRadius="1dip"
				android:topRightRadius="1dip"
				android:bottomRightRadius="1dip" />
			<stroke android:width="1px" android:color="#80000000" />
			<padding android:left="2dip" android:right="2dip"
				android:top="2dip" android:bottom="2dip" />
		</shape>
	</item>
</selector>