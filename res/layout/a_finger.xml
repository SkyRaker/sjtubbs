<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout 
      android:layout_width="fill_parent"
  	  android:layout_height="wrap_content"
  	  android:background="@drawable/bg_topbar">
  	  <TextView 
	  	  android:layout_width="wrap_content"
	  	  android:layout_height="wrap_content"
	  	  android:textColor="#000000"
	  	  android:gravity="center"
	  	  android:text="涂鸦"
	  	  android:textSize="20dip"
	  	  android:layout_gravity="center"
	  	  android:layout_weight="4"
	  	  android:id="@+id/tv_Info"/>
	</LinearLayout>
  <LinearLayout 
  	android:id="@+id/layout_finger"
    android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
 	android:layout_weight="1"></LinearLayout>
  <LinearLayout 
    android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="@drawable/bg_dark"
  	android:gravity="center_vertical"
  	 android:layout_weight="6">
  	<Button android:id="@+id/btn_paint"
  		android:text="@string/finger"
  		android:background="@drawable/bg_btnnormal"
  	    android:layout_width="fill_parent"
  	    android:layout_weight="1"
  	    android:textSize="18sp"
  	    android:shadowColor="#000000"
  	    android:textColor="@color/text"
  		android:layout_height="fill_parent"/>
  	<Button android:id="@+id/btn_color"
  		android:text="@string/color"
  		android:background="@drawable/bg_btnnormal"
  	    android:layout_width="fill_parent"
  		android:layout_weight="1"
  		android:textSize="18sp"
  		 android:shadowColor="#000000"
  	    android:textColor="@color/text"
  		android:layout_height="fill_parent"/>
  	<Button android:id="@+id/btn_photo"
  		android:text="@string/photo"
  		android:background="@drawable/bg_btnnormal"
  	    android:layout_width="fill_parent"
  	    android:layout_weight="1"
  	    android:textSize="18sp"
  	     android:shadowColor="#000000"
  	    android:textColor="@color/text"
  		android:layout_height="fill_parent"/>
  	<Button android:id="@+id/btn_upimg"
  		android:text="@string/upimg"
  		android:background="@drawable/bg_btnnormal"
  	    android:layout_width="fill_parent"
  	    android:layout_weight="1"
  	     android:textSize="18sp"
  	      android:shadowColor="#000000"
  	    android:textColor="@color/text"
  		android:layout_height="fill_parent"/>
  </LinearLayout>
</LinearLayout>
