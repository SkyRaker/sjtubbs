<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_words" >

    <TextView
        android:id="@+id/tv_Colums"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_topbar"
        android:gravity="center"
        android:text="分区十大"
        android:textColor="@color/divider" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Colums"
        android:background="@drawable/list_select"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtview_topten_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:adjustViewBounds="true"
            android:padding="2dip"
            android:text="文章的标题"
            android:textColor="@color/topictitle"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtview_topten_title"
            android:layout_marginTop="2dip"
            android:background="#50e4f2f5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtview_topten_authorid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:text="作者的ID"
                android:textColor="@color/id"
                android:textSize="10sp" >
            </TextView>

            <TextView
                android:id="@+id/txtview_topten_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dip"
                android:gravity="right"
                android:layout_weight="1"
                android:text="所在的版区"
                android:textColor="@color/board"
                android:textSize="10sp" >
            </TextView>

            <TextView
                android:id="@+id/txtview_topten_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发布的时间"
                android:textColor="@color/time"
                android:textSize="10sp" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>