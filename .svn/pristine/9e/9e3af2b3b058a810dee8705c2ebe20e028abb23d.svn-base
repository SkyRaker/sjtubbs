<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		<LinearLayout
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="10"
			android:layout_width="fill_parent">
			<ImageView
				android:id="@+id/posttype"
				android:layout_marginTop="2dip"
				android:layout_width="25dip"
				android:background="@drawable/bg_img"
				android:layout_height="25dip"/>
			<TextView
				android:padding="2dip"
				android:layout_width="30dip"
				android:textStyle="bold"
				android:layout_height="wrap_content"
				android:id="@+id/postindex"
				android:textSize="10dip"
				android:gravity="center"/>
		</LinearLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">
			<TextView
				android:id="@+id/posttitle"
				android:text="时间"
				android:layout_alignParentTop="true"
				android:adjustViewBounds="true"
				android:padding="2dip"
				android:textSize="14dip"
				android:textColor="@color/topictitle"
				android:layout_alignLeft="@+id/posttitle"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip" />
			<TextView
				android:text="作者"
				android:id="@+id/postauthorid"
				android:textColor="@color/id"
				android:padding="2dip"
				android:layout_height="wrap_content"
				android:textSize="10dip"
				android:layout_width="wrap_content"
				android:layout_alignLeft="@+id/posttitle"
				android:layout_below="@id/posttitle"/>
			<TextView
				android:textColor="@color/time"
				android:id="@+id/posttime"
				android:text="作者"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/posttitle"
				android:gravity="center_vertical"
				android:layout_alignRight="@+id/posttitle"
				android:textSize="10dip"
				android:paddingRight="5dip"/>
		</RelativeLayout>
</LinearLayout>